# when brew upgrade, remember to reset hash at
# sudo visudo -f /private/etc/sudoers.d/yabai
# with shasum -a 256 $(which yabai)

# configuring scripting addition or smthg idrk what this does but it told me to do this
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

######################
### TILING OPTIONS ###
######################

# bsp/managed - windows managed by yabai
# float [default] - left alone
# tag --space 1 to override for specific spaces
yabai -m config layout bsp 
yabai -m config --space 1 layout stack

# first_child - new window spawns to the left if vertical split, or top if horizontal split
# second_child [default] - reverse behavior
yabai -m config window_placement second_child

########################
### PADDING AND GAPS ###
########################

# set padding (default: 0)
# tag --space 1 to override for specific spaces
yabai -m config top_padding    15 
yabai -m config bottom_padding 15
yabai -m config left_padding   15
yabai -m config right_padding  15
yabai -m config window_gap     15
yabai -m config external_bar   all:0:34

####################
### SPLIT RATIOS ###
####################

# on - all windows occupy same space
# off [default] - otherwise
yabai -m config auto_balance on 

# value determines proportion of space that old window gets when new window is created (default: 0.5)
# only works when auto_balance is off
yabai -m config split_ratio 0.5

yabai -m config window_shadow off

yabai -m config window_opacity off
yabai -m config active_window_opacity 1.0
yabai -m config normal_window_opacity 0.9


#############
### RULES ###
#############


yabai -m rule --add label="Finder" app="^Finder$" title="(Co(py|nnect)|Move|Info|Pref)" manage=off
yabai -m rule --add label="Safari" app="^Safari$" title="^(General|(Tab|Password|Website|Extension)s|AutoFill|Se(arch|curity)|Privacy|Advance)$" manage=off
yabai -m rule --add label="System Preferences" app="^System Preferences$" title=".*" manage=off
yabai -m rule --add label="App Store" app="^App Store$" manage=off
yabai -m rule --add label="Activity Monitor" app="^Activity Monitor$" manage=off
yabai -m rule --add label="Calculator" app="^Calculator$" manage=off
yabai -m rule --add label="Dictionary" app="^Dictionary$" manage=off
yabai -m rule --add label="mpv" app="^mpv$" manage=off
yabai -m rule --add label="Software Update" title="Software Update" manage=off
yabai -m rule --add label="About This Mac" app="System Information" title="About This Mac" manage=off
